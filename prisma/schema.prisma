generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// PLACEHOLDER MODELS - Will be detailed in US-0.3.1
// ============================================

enum Role {
  SUPER_ADMIN
  ADMIN
  STAFF
}

enum AuthMethod {
  CREDENTIALS
  GOOGLE
}

enum UserStatus {
  PENDING
  ACTIVE
  REVOKED
}

enum OrderStatus {
  IN_PROGRESS
  COMPLETED
  OVERDUE
}

enum LoginResult {
  SUCCESS
  FAILURE
}

model AuditLog {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  timestamp DateTime    @default(now())
  result    LoginResult
  ip        String?
  createdAt DateTime    @default(now())
  
  @@index([userId, timestamp])
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  role      Role     @default(STAFF)
  authMethod AuthMethod @default(CREDENTIALS) // NEW
  status     UserStatus @default(ACTIVE)      // NEW
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // For STAFF with shared code
  staffCode    String? @unique // Staff code for quick login, must be unique
  canUpload     Boolean @default(false) // Permission: can upload orders
  canUpdateStatus Boolean @default(false) // Permission: can update order status
  // For password-based auth (SUPER_ADMIN, ADMIN)
  passwordHash String?

  // NEW: For Admin login security
  failedLoginCount  Int      @default(0)

  // Relations
  orders    Order[]  @relation("UploadedBy")
  auditLogs AuditLog[]
}

model Order {
  id              String      @id @default(cuid())
  jobNumber       String      @unique
  registeredDate  DateTime
  receivedDate    DateTime    // Thời gian nhận mẫu - dùng để tính processing time
  requiredDate    DateTime
  priority        Int         @default(0)
  status          OrderStatus @default(IN_PROGRESS)

  // Parsed data from Excel
  registeredBy    String?     // Row 2, Col 3 - Người đăng ký
  checkedBy       String?     // Row 2, Col 7 - Người kiểm tra
  note            String?     // Row 3 - Ghi chú
  sampleCount     Int         @default(1)
  description     String?

  // Tracking
  completedAt     DateTime?
  uploadedAt      DateTime    @default(now())
  uploadedById    String
  uploadedBy      User        @relation("UploadedBy", fields: [uploadedById], references: [id])

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([status])
  @@index([registeredDate])
  @@index([requiredDate])
}

model Config {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  // login_mode: quick_code, full_login, both
  updatedAt DateTime @updatedAt
}
